@model EmployeeTask.Models.Employee

@{
    ViewBag.Title = "Delete";
}



<div class="row">
    <div class="col-6 mt-3 my-3 card-title">

        <h3>Employee Delete  </h3>
    </div>

    <div class=" col-6 template-demo  float-end    ">
        <a href="@Url.Action("Index")" class="  btn  btn-sm btn-danger float-end  btn-icon-text ">
            <i class="fa fa-chevron-left"></i>&nbsp; Back
        </a>
    </div>
</div>

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Employee</h4>
            <div class=" col-md-2 ">
                <button type="button" class="btn btn-danger" id="SubmitButton" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fa fa-trash"></i>
                    &nbsp;Delete
                </button>
            </div>

            @using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { @class = "noModal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.EmployeeId)
                <!-- Button trigger modal -->


                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete Employee</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure???
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                <button type="submit" class="btn btn-danger">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
