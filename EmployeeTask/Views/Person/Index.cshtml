@model IEnumerable<EmployeeTask.Models.Person>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="col">
    <a href="@Url.Action("Create")"> Create Person</a>

</div>
<div class="card mt-2">
    <div class="card-body" id="MainitemList">
        <h4 class="card-title">List</h4>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table table-striped dataTable table-hover table-bordered">

                        <tr>
                            <td>S.N</td>
                            <td>First Name</td>
                            <td>Middle Name</td>
                            <td>Last Name</td>
                            <td>Address</td>
                            <td>Email</td>
                            <td>Action</td>
                        </tr>

                        @if (Model != null)
                        {
                            var i = 1;

                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@data.FirstName</td>
                                    <td>@data.MiddleName</td>
                                    <td>@data.LastName</td>
                                    <td>@data.Address</td>
                                    <td>@data.Email</td>
                                    <td>
                                        <a class="btn btn-sm" href="@Url.Action("Edit", new { id = data.PersonId })" data-original-title="Edit" data-placement="top"><i class="fa fa-edit"></i>&nbsp; Edit</a>
                                        @*<a class="btn btn-xs  btn-green tooltips" href="@Url.Action("Details", new { id=item.prd01uin})" data-original-title="View" data-placement="top"><i class="fa fa-eye"></i></a>*@

                                        <a class="btn btn-sm" href="@Url.Action("Delete", new { id = data.PersonId })" data-original-title="Remove" data-placement="top"><i class="fa fa-trash"></i>&nbsp; Delete</a>
                                    </td>
                                </tr>
                            }

                        }

                        else
                        {
                            <h2>No any person available</h2>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#showData').DataTable();
    });
</script>
